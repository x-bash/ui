ui.color(){
  #  https://unix.stackexchange.com/questions/269077/tput-setaf-color-table-how-to-determine-color-codes
  :
}



COLP() {
    tput setaf "$1"
    shift
    echo -ne "$@"
    tput sgr0
}

COLBP() {
    tput setaf "$1"
    tput bold
    shift
    echo -ne "$@"
    tput sgr0
}

ERROR() { COLBP 1 "$@"; }
WARN() { COLBP 3 "$@"; }
INFO() { COLBP 2 "$@"; }
FINE() { COLBP 4 "$@"; }

@log() { COLBP 4 "$@"; }
@warn() { COLBP 3 "$@"; }
@err() { COLBP 1 "$@"; }
# @info() { COLBP 2 "$@"; }

@echop() {
    [ '' != "$FG" ] && tput setaf "$FG"
    [ '' != "$BG" ] && tput setab "$BG"
    tput bold
    echo "$@"
    tput sgr0
}

