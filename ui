############################
# Section 1: ui major function and facilities
############################

ui(){
    local f=$1
    case "$f" in
        http://* | https://* | ftp://* |ftps://* | git://* ) ui.url "$f";;
        :) ui.print_var "$@" ;;
        *) ui.style "$@" ;;
    esac
}

debug_init ui

############################
# Section 1: ui style
############################
ui.style(){
    while [ $# -gt 0 ]; do
        case "$1" in
            dim|debug)      tput dim;;
            info)           tput setaf 6; tput bold;;
            error)          tput bold; tput setaf 1;;
            warn)           tput bold; tput setaf 3;;
            bold)           tput bold;;
            black)          tput setaf 0;;
            red)            tput setaf 1;;
            green)          tput setaf 2;;
            yellow)         tput setaf 3;;
            blue)           tput setaf 4;;
            purple|magneta) tput setaf 5;;
            lightblue|cyan) tput setaf 6;;
            white)          tput setaf 7;;
            reset)          tput reset ;;
            --) 
                shift; 
                echo -n "$@"
                tput sgr0;
                return 0
        esac
        shift
    done
}

############################
# Section 1: ui simple components
############################

ui.url(){
    echo "$(tput smul)${1:?Provide URL}$(tput rmul)"
}

ui.seperator(){
    local sep maxw
    maxw="$(tput cols)"
    sep="$(seq -f "${1:-â€”}" -s '' "$maxw")"
    echo "$sep"
}

ui.progress(){
    local maxw number=80 stars space percent=$1
    maxw="$(tput cols)"
    [ "$maxw" -lt $number ] && number=$maxw
    stars="$(seq -f "${2:-$(printf "*")}" -s '' "$number")"
    space="$(seq -f " " -s '' "$number")"
    local v=$(( ${#stars} * percent / 100 ))
    local v100=$((100 - v))
    printf "(%3d %%)|%s%s|" "$percent" "${stars:0:$v}" "${space:v:$v100}"
}

