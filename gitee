    #     if [ "$flag" -eq 0 ]; then
    #         first+=("$i")
    #     else
    #         second+=("$i")
    #     fi
    # done

    # if [ "${#second[@]}" -eq 0 ]; then
    #     second=("cat")
    # fi 


    local i=1 total_page=100000
    for (( i=1; i <= total_page; i++ )); do
        echo gt.get "$@" page=$i per_page=100 >&2
        gt.get "$@" page=$i per_page=100
        total_page="$(gt.resp.header "total_page")"
        echo "total_page:$total_page" >&2
    done
}

